        app:layout_constraintStart_toStartOf="@+id/buttonN5"
        app:layout_constraintTop_toBottomOf="@+id/buttonN5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="508dp" />

    <Button
        android:id="@+id/buttonN1"
        android:layout_width="76dp"
        android:layout_height="67dp"
        android:backgroundTint="#9F9999"
        android:text="1"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/buttonClear"
        app:layout_constraintTop_toBottomOf="@+id/buttonClear" />

    <Button
        android:id="@+id/buttonNcero"
        android:layout_width="76dp"
        android:layout_height="67dp"
        android:layout_marginStart="17dp"
        android:backgroundTint="#9F9999"
        android:text="0"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/buttonN9"
        app:layout_constraintStart_toEndOf="@+id/buttonN9"
        app:layout_constraintTop_toTopOf="@+id/buttonN9"
